    <script src="//cdnjs.cloudflare.com/ajax/libs/list.js/2.3.0/list.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.getElementById('IsPublished').addEventListener("change", function () {
            let button = document.getElementById('save-or-publish-button')
            if (this.checked) {
                button.value = "Publish"
            } else {
                button.value = "Save"
            }
        });
    </script>
    <script type="text/javascript">
        function generateForm(commentId, commentContent, blogUserId, created) {
            document.querySelector('#form-template input#id').value = commentId;
            document.querySelector('#form-template input#BlogUserId').value = blogUserId;
            document.querySelector('#form-template input#Content').value = commentContent;
            document.querySelector('#form-template input#Created').value = created;
        }

        $('#exampleModal').on('show.bs.modal', function (event) {
            let button = $(event.relatedTarget) // Button that triggered the modal
            let commentId = button.data('id')
            let blogUserId = button.data('bloguserid')
            let commentContent = button.data('content')
            let created = button.data('created')
            generateForm(commentId, commentContent, blogUserId, created)

        })


        function EditComment(id) {
            document.getElementById(`comment-form-id-${id}`).style.display = "block";
        }
        function CancelEditComment(id) {
            document.getElementById(`comment-form-id-${id}`).style.display = "none";
        }

        function showname() {
            let name = document.getElementById('choose-file-input');
            document.getElementById("file-selected").innerHTML = name.files.item(0).name;
        };

        tinymce.init({
            selector: '#content-textarea',
            //skin: "oxide-dark",
            //content_css: "dark",
            height: "50vh"
        });
    </script>
    <script>
        var postList = new List('post-container', {
            page: 10,
            pagination: true
        });
    </script>
    @RenderSection("Scripts", required: false)

</body>

</html>

























