@using Microsoft.AspNetCore.Identity
@using CodingBlog.Models

@inject SignInManager<BlogUser> SignInManager
@inject UserManager<BlogUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="navbar-item is-slide is-centered-tablet" href="javascript: void(0)" title="Manage">Hello @User.Identity.Name!</a>
    <a class="navbar-item is-slide is-centered-tablet" href="javascript: document.getElementById('logout-form').submit()" title="Manage">Sign Out</a>
    <form id="logout-form" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"></form>

}
else
{

    <a class="navbar-item is-slide is-centered-tablet" asp-area="Identity" asp-page="/Account/Login" target="_blank">
        Sign In
    </a>
    <div class="navbar-item is-button is-centered-tablet">
        <a id="#signup-btn"
           asp-area="Identity" asp-page="/Account/Register"
           class="button button-cta is-bold btn-align primary-btn raised is-rounded">
            Sign Up
        </a>
    </div>
}


